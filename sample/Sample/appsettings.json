{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    },
    "PublicTracor": {
      "Default": "Information"
    },
    "PrivateTracor": {
      "Default": "Information"
    }
  },
  "Tracor": {
    "IsEnabled": true,
    "ApplicationName": "Sample",
    "IsEmergencyLogging-Comment": "Log to console for Configuration-Logging",
    "IsEmergencyLogging": false,
    "ActivityListener": {
      "ActivitySourceStartEventEnabled": "true",
      "ActivitySourceStopEventEnabled": "true",
      "AllowAllActivitySource": false,
      "ListActivitySourceName": [ "Microsoft.AspNetCore", "System.Net.Http" ]
    },
    "FileSink": {
      "Period": "00:05:00",
      "FlushPeriod": "00:00:01",
      "BaseDirectory": "c:/data/LogFiles/",
      "Directory": "{ApplicationName}",
      "FileName": "log-{ResourceName}_{TimeStamp}.jsonl",
      "Compression": "None",
      "CleanupEnabled": true
    },
    "x-HttpSink": {
      "TargetUrl": "http://localhost:4319/_api/tracerit/v1/collector.http"
    }
  },
  "OpenTelemetry": {
    "IsEnabled": true,
    "Tracing": {
      "Exporter": {
        "Otlp": {
          "Endpoint": "http://localhost:4318/v1/traces"
        }
      }
    },
    "Logging": {
      "Exporter": {
        "Otlp": {
          "X-Endpoint": "http://localhost:4318/v1/logs"
        }
      }
    }
  },
  "AllowedHosts": "*"
}
